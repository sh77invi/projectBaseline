<Window x:Class="Interactive2DChart.StartMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Start Menu" Height="320" Width="300"
    >
  <StackPanel Margin="10">
    <TextBlock FontSize="12pt" FontWeight="Bold" Margin="10,10,20,10"
               TextAlignment="Center" TextWrapping="Wrap">
      Line Charts
    </TextBlock>
        <Button Click="Automatic_Click" Margin="10,2,10,2" FontSize="11pt">Automatic Ticks Placement</Button>
        <Button Click="Panning_Click" Margin="10,2,10,2" FontSize="11pt">Chart Panning</Button>
        <Button Click="Zooming_Click" Margin="10,2,10,2" FontSize="11pt">Chart Zooming</Button>
        <Button Click="MouseWheel_Click" Margin="10,2,10,2" FontSize="11pt">Zooming with MouseWheel</Button>
        <Button Click="Retrieve_Click" Margin="10,2,10,2" FontSize="11pt">Retrieving Chart Data</Button>
        <Button Click="Close_Click" Margin="10,2,10,2" FontSize="11pt">Close</Button>

  </StackPanel>
</Window>

