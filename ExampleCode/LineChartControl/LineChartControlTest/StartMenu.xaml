<Window x:Class="LineChartControlTest.StartMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Start Menu" Height="320" Width="300"
    >
    <StackPanel Margin="10">
        <TextBlock FontSize="12pt" FontWeight="Bold" Margin="10,10,20,10"
               TextAlignment="Center" TextWrapping="Wrap">
      Line Charts
        </TextBlock>
        <Button Click="Line_Click" Margin="10,2,10,2" FontSize="11pt">Line Chart</Button>
        <Button Click="Multiple_Click" Margin="10,2,10,2" FontSize="11pt">Multiple Line Charts</Button>
        <Button Click="Close_Click" Margin="10,2,10,2" FontSize="11pt">Close</Button>

    </StackPanel>
</Window>
