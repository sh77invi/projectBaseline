<Window x:Class="Specialized2DCharts.StartMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="StartMenu" Height="350" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock FontSize="12pt" FontWeight="Bold" Margin="10,10,20,10"
               TextAlignment="Center" TextWrapping="Wrap" Text=" Specialied 2D Charts"/>
            
            <Button Click="Bar_Click"  Margin="10,2,10,2" FontSize="11pt">Bar Charts</Button>
            <Button Click="Stairstep_Click" Margin="10,2,10,2" FontSize="11pt">Stair Step Charts</Button>
            <Button Click="Stem_Click" Margin="10,2,10,2" FontSize="11pt">Stem Charts</Button>
            <Button Click="Error_Click" Margin="10,2,10,2" FontSize="11pt">Error Bars</Button>
            <Button Click="Area_Click" Margin="10,2,10,2" FontSize="11pt">Area Charts</Button>
            <Button Click="Polar_Click" Margin="10,2,10,2" FontSize="11pt">Polar Charts</Button>
            <Button Click="Pie_Click" Margin="10,2,10,2" FontSize="11pt">Pie Chart</Button>
            <Button Click="Close_Click" Margin="10,2,10,2" FontSize="11pt">Close</Button>

        </StackPanel>
    </Grid>
</Window>
