<Window x:Class="Interpolation.StartMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Start Menu" Height="320" Width="300">
    <StackPanel Margin="10">
        <TextBlock FontSize="12pt" FontWeight="Bold" Margin="10,10,20,10"
               TextAlignment="Center" TextWrapping="Wrap">
      Line Charts
        </TextBlock>
        <Button x:Name="Linear" Click="Linear_Click" Margin="10,2,10,2" FontSize="11pt">Linear Interpolation</Button>
        <Button x:Name="Lagrange" Click="Lagrange_Click" Margin="10,2,10,2" FontSize="11pt">Lagrange Interpolation</Button>
        <Button x:Name="Barycentric" Click="Barycentric_Click" Margin="10,2,10,2" FontSize="11pt">Barycentric Interpolation</Button>
        <Button x:Name="Divided" Click="Divided_Click" Margin="10,2,10,2" FontSize="11pt">Newton Divided Difference</Button>
        <Button x:Name="Spline" Click="Spline_Click" Margin="10,2,10,2" FontSize="11pt">Cubic Spline Interpolation</Button>
        <Button x:Name="Close" Click="Close_Click" Margin="10,2,10,2" FontSize="11pt">Close</Button>
    </StackPanel>
</Window>
