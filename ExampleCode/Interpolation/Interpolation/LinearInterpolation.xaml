<Window x:Class="Interpolation.LinearInterpolation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:LineChartControl;assembly=LineChartControl"
    Title="LinearInterpolation" Height="300" Width="300">
    <Grid x:Name="rootGrid" SizeChanged="rootGrid_SizeChanged">
        <chart:LineChartControlLib x:Name="myChart" Title="Linear Interpolation" 
                                   Xmin="0" Xmax="7" Ymin="-1.5" Ymax="1.5" XTick="1" YTick="0.5"/>
    </Grid>
</Window>
