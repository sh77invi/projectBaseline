<Window x:Class="Interpolation.BarycentricInterpolation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:LineChartControl;assembly=LineChartControl"
    Title="Barycentric Interpolation" Height="300" Width="300">
    <Grid x:Name="rootGrid" SizeChanged="rootGrid_SizeChanged">
        <chart:LineChartControlLib x:Name="myChart" Title="Barycentric Interpolation"
                                   Xmin="-1" Xmax="1" XTick="0.5" Ymin="-3" Ymax="2" YTick="1"/>
    </Grid>
</Window>
