<Window x:Class="LineCharts.SimpleLineChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Simple Line Chart" Height="300" Width="300">
    <Grid  Margin="0" x:Name ="chartGrid" ClipToBounds="True" Background="Transparent" SizeChanged="chartGrid_SizeChanged">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Gray" 
                BorderThickness="1" Background="White" Margin="0">
            <Canvas  Margin="0" x:Name ="chartCanvas" ClipToBounds="True"  Background="Transparent"/>
        </Border>
    </Grid>
</Window>
