<Window x:Class="Chart3DWithWPFEngine.StartMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="Chart3DWithWPFEngine: Start Menu" Height="280" Width="300">
    <StackPanel Margin="10" Button.Click="StartMenuButton_Click">
        <TextBlock FontSize="12pt" FontWeight="Bold" Margin="10,10,20,10"
               TextAlignment="Center" TextWrapping="Wrap">
            3D Charts with WPF Engine
        </TextBlock>
        <Button Margin="10,2,10,2" FontSize="11pt">SimpleSurfaceTest</Button>
        <Button Margin="10,2,10,2" FontSize="11pt">ParametricSurfaceTest</Button>
        <Button Margin="10,2,10,2" FontSize="11pt">ExtrudeSurfaceTest</Button>
        <Button Margin="10,2,10,2" FontSize="11pt">RotateSurfaceTest</Button>
        <Button Margin="10,2,10,2" FontSize="11pt">SurfaceShadingTest</Button>
        <Button Margin="10,2,10,2" FontSize="11pt">Close</Button>
    </StackPanel>
</Window>

