<Window x:Class="Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="393" Width="842">
    <Grid x:Name="chartGrid" ClipToBounds="False" Background="Transparent" SizeChanged="chartGrid_SizeChanged">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Background="White" Margin="10">
            <Canvas Margin="0" x:Name="chartCanvas" ClipToBounds="True" Background="Transparent"/>
        </Border>
        
    </Grid>
</Window>
