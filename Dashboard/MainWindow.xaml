<Window x:Class="Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized" Height="400" Width="1000">
    <Grid Margin="8">
        <TabControl>
            <TabItem Header="Work">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Name="workStartGrid" Grid.Row="0" Grid.Column="0"/>
                    <Grid Name="workEndGrid" Grid.Row="1" Grid.Column="0"/>
                    <Grid Name="workDurGrid" Grid.Row="2" Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Sleep">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Name="sleepStartGrid" Grid.Row="0" Grid.Column="0"/>
                    <Grid Name="sleepEndGrid" Grid.Row="1" Grid.Column="0"/>
                    <Grid Name="sleepDurGrid" Grid.Row="2" Grid.Column="0"/>
                </Grid>
            </TabItem>
        </TabControl>        
    </Grid>
